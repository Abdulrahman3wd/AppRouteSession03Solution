@model Department
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>

<br />
<br />

<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOFCreation"></label>
        <input asp-for="DateOFCreation" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="Save" /> |
    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-info">Cancel</a>


</form>